278. First Bad Version

// The API isBadVersion is defined for you.
// bool isBadVersion(int version);

class Solution {
public:
    int firstBadVersion(int n) {
        return FBV(1,n);
        
    }
    int FBV(int s, int e){
        if(s == e){
            return s;
        }
        int mid = s +(e - s)/2;
        if(isBadVersion(mid))
            return FBV(s, mid);
        return FBV(mid+1, e);
    }
};

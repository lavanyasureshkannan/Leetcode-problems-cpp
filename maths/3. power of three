326. Power of Three


class Solution {
public:
    bool isPowerOfThree(int n) {
        // base case
        if(n < 1){
            return false; 
        }
        
        while(n%3 == 0){
        
        n = n/3;
    }
        if(n == 1){
            return true;
        }
    return false;
    }
};
